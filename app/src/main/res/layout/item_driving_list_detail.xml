<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="drivingRecord"
            type="co.kr.daou.autodistancedriven.model.db.dto.DrivingRecordDto"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview_regular">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_item_driving_meter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/pretendardbold"
                android:textColor="@color/dark_blue"
                tools:text="13.9M" />
            <TextView
                android:id="@+id/textview_item_driving_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/pretendardbold"
                tools:text="00시 00분 00초 소요"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textview_item_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableLeftCompat="@drawable/placeholder"
            app:drawableTint="@color/point_dark_pink"
            tools:text="출발 시간 : 09월 06일 04시 43분" />

        <TextView
            android:id="@+id/textview_item_finish_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableLeftCompat="@drawable/placeholder"
            app:drawableTint="@color/point_dark_pink"
            tools:text="도착 시간 : 09월 06일 04시 43분"
             />
    </LinearLayout>
</layout>
